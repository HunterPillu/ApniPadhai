<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_half"
    app:cardElevation="@dimen/home_header_elevation">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_half">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/home_list_header"
            android:text="@string/header_quiz" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDTS"
                style="@style/MatchWidth"
                android:layout_marginHorizontal="@dimen/margin_half"
                android:layout_marginVertical="@dimen/margin_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/card_color_category"
                app:cardElevation="@dimen/home_item_elevation">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_min_item"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDTS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/margin_full"
                        android:layout_marginVertical="@dimen/margin_quarter"
                        android:text="@string/demo_text_series"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/body_secondary" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWL"
                style="@style/MatchWidth"
                android:layout_marginVertical="@dimen/margin_half"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/card_color_category"
                app:cardElevation="@dimen/home_item_elevation">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_min_item"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvWL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/margin_full"
                        android:layout_marginVertical="@dimen/margin_quarter"
                        android:text="@string/winner_list"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/body_secondary" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMTS"
                style="@style/MatchWidth"
                android:layout_marginHorizontal="@dimen/margin_half"
                android:layout_marginBottom="@dimen/margin_quarter"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/card_color_category"
                app:cardElevation="@dimen/home_item_elevation">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_min_item"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMTS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/margin_full"
                        android:layout_marginVertical="@dimen/margin_quarter"
                        android:text="@string/multiplayer_test_series"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/body_secondary" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPQ"
                style="@style/MatchWidth"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/card_color_category">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_min_item"
                    android:orientation="vertical"
                    app:cardElevation="@dimen/home_item_elevation">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/margin_full"
                        android:layout_marginVertical="@dimen/margin_quarter"
                        android:text="@string/header_paid_quiz"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/body_secondary" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
